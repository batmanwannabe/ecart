<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title><%= title %></title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.1.20/jquery.fancybox.min.css" />
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    </head>

    <body>        
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <span style="font-size:25px;cursor:pointer" onclick="openNav()">&#9776; </span>
                    <a class="navbar-brand" href="/">EKart</a>
                    
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <% if (user) { %>
                        <li><a href="/wishlist/products">Wishlist</a></li>
                        <li><a href="/orders/myorders">Orders</a></li>
                        <li><a href="/products/recommendation">Recommendation</a></li>
                        <li><a href="/users/profile">Profile</a></li>
                        <li><a href="/notification/all-notifications">Notifications</a></li>

                        <% } %>
                    </ul>
                    <ul class="nav navbar-nav">

                    </ul>
                    <div class="col-sm-3 col-md-3 navbar-right">
                        <form class="navbar-form" role="search" method="get" action="/search/query">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search products" name="q">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/cart/checkout">My Cart (
                                <% if (typeof cart !== "undefined") { %>
                                <%= cart.length %>
                                <% } else {%>
                                0
                                <% } %>
                                )</a>
                        </li>
                        <% if (user) { %>
                        <li><a href="/users/logout">Hi, <%= user.username %> ( logout )</a></li>
                        <% } else {%>
                        <li><a href="/users/register">Register</a></li>
                        <li><a href="/users/login">Log in</a></li>
                        <% } %>   


                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <a href="/products">All products</a>
            <a href="/deals/deals">Today's Deals!</a>
            <br>
            <h3>Categories:</h3>
            <% categories.forEach(function(c){ %>
            <a href="/products/<%= c.slug %>"><%= c.title %></a>
        <% }); %>   
    </div>
    <div class="container">
        <%- messages('messages', locals) %>

        <% if (errors) {%>
        <% errors.forEach(function(error) { %>
        <div class="alert alert-danger">
            <%= error.msg %>
        </div>
        <% });%>
        <% }%>

        <div class="row">
            <div class="col-xs-12 col-md-3">

                
                
            </div>
            <div class="col-xs-12 col-md-1"></div>
            <div class="col-xs-12 col-md-8">







